<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/intro"
    android:id="@+id/intro"
    android:gravity="center_horizontal"
    android:layout_above="@+id/message"
    android:textSize="20dip"
    />    
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:textSize="80dip"
    android:text="$"
    android:textColor="#00ff00"
    android:id="@id/message"
    android:gravity="center_horizontal"
    android:layout_centerInParent="true"
    />
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/close"
    android:id="@+id/close"
    android:layout_below="@id/message"   
    android:gravity="center_horizontal"
    android:textSize="20dip"
    />
    
        
<Button android:id="@+id/clearButton" android:layout_height="wrap_content" android:onClick="onClearClick" android:layout_width="wrap_content" android:text="Clear Total" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_alignRight="@+id/clearButton"></Button>
</RelativeLayout>
